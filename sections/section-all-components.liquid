<style type="text/css">
  .section--{{ section.id }} .all-components__wrapper {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  @media screen and (max-width: 767px) {
    .section--{{ section.id }} .all-components__wrapper {
      padding-top: {{ section.settings.padding_top | times: 0.75 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 }}px;
    }
  }
  
  .accordion__content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .accordion__list {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .accordion__item {
    margin-bottom: 8px;
  }
  
  .accordion__item:last-child {
    margin-bottom: 0;
  }
  
  .accordion__title {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 56px;
    padding: 0 20px;
    background: #fff;
    border: none;
    border-radius: 12px;
    font-size: 16px;
    font-weight: 500;
    text-align: left;
    cursor: pointer;
    transition: background-color 0.2s ease, box-shadow 0.2s ease;
  }
  
  @media screen and (max-width: 767px) {
    .accordion__title {
      height: 48px;
      padding: 0 16px;
      font-size: 14px;
    }
  }
  
  .accordion__title:hover,
  .accordion__title:focus {
    background: #f8f8f8;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    outline: none;
  }
  
  .accordion__title:focus {
    outline: 2px solid #0066cc;
    outline-offset: 2px;
  }
  
  .accordion__title-text {
    flex: 1;
    margin: 0;
  }
  
  .accordion__icons {
    display: flex;
    align-items: center;
    width: 20px;
    height: 20px;
    position: relative;
  }
  
  .icon-toggle-plus,
  .icon-toggle-minus {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 18px;
    height: 18px;
    stroke: currentColor;
    stroke-width: 2;
    transition: opacity 0.2s ease;
  }
  
  .icon-toggle-plus {
    opacity: 1;
  }
  
  .icon-toggle-minus {
    opacity: 0;
  }
  
  .accordion__title.is-expanded .icon-toggle-plus {
    opacity: 0;
  }
  
  .accordion__title.is-expanded .icon-toggle-minus {
    opacity: 1;
  }
  
  .accordion__text-wrapper {
    overflow: hidden;
    transition: height 0.25s ease;
    height: 0;
  }
  
  .accordion__text-wrapper.is-expanded {
    height: auto;
  }
  
  .accordion__text {
    padding: 20px 20px 16px 20px;
  }
  
  @media screen and (max-width: 767px) {
    .accordion__text {
      padding: 16px 16px 12px 16px;
    }
  }
  
  .accordion__text.rte p {
    margin-bottom: 12px;
  }
  
  .accordion__text.rte p:last-child {
    margin-bottom: 0;
  }
  
  .accordion__text.rte strong {
    font-weight: 600;
  }
  
  .accordion__text.rte a {
    color: #0066cc;
    text-decoration: underline;
  }
  
  .accordion__text.rte a:hover {
    text-decoration: none;
  }
</style>

<section class="section section--{{ section.id }} all-components" data-collapsible-single>
  <div class="container">
    <div class="all-components__wrapper">
      
      {% if section.settings.title != blank %}
        <div class="section__title">
          <h2 class="section__title-text h3">{{ section.settings.title }}</h2>
        </div>
      {% endif %}

      <div class="accordion__content">
        <accordion-group>
          {%- for block in section.blocks -%}
            <div class="accordion__list">
              <div class="accordion__item">
                <details id="components-{{ section.id }}-{{ forloop.index }}" {{ block.shopify_attributes }}>
                  <summary class="accordion__title" aria-expanded="false" aria-controls="content-{{ section.id }}-{{ forloop.index }}">
                    <span class="accordion__title-text">{{ block.settings.title | escape }}</span>
                    <div class="accordion__icons">
                      <svg class="icon-toggle-plus" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                      </svg>
                      <svg class="icon-toggle-minus" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M18 12H6"/>
                      </svg>
                    </div>
                  </summary>
                  
                  <details-content>
                    <div class="accordion__text-wrapper" id="content-{{ section.id }}-{{ forloop.index }}" aria-expanded="false">
                      {% unless block.settings.content == blank %}
                        <div class="accordion__text rte">
                          {{ block.settings.content }}
                        </div>
                      {% endunless %}
                    </div>
                  </details-content>
                </details>
              </div>
            </div>
          {%- endfor -%}
        </accordion-group>
      </div>
      
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Handle All Components accordion functionality
  const accordionGroups = document.querySelectorAll('[data-collapsible-single]');
  
  accordionGroups.forEach(function(group) {
    const details = group.querySelectorAll('details');
    
    details.forEach(function(detail, index) {
      const summary = detail.querySelector('summary');
      const textWrapper = detail.querySelector('.accordion__text-wrapper');
      
      if (!summary || !textWrapper) return;
      
      // Enhanced toggle function with height animation
      function toggleAccordion(targetDetail, shouldOpen) {
        const targetSummary = targetDetail.querySelector('summary');
        const targetWrapper = targetDetail.querySelector('.accordion__text-wrapper');
        
        if (shouldOpen) {
          // Open the accordion
          targetDetail.open = true;
          targetSummary.classList.add('is-expanded');
          targetSummary.setAttribute('aria-expanded', 'true');
          
          // Animate height before adding expanded class
          const content = targetWrapper.querySelector('.accordion__text');
          if (content) {
            // Get the natural height of the content
            targetWrapper.style.height = 'auto';
            const contentHeight = targetWrapper.offsetHeight;
            targetWrapper.style.height = '0px';
            
            // Force reflow then animate to full height
            requestAnimationFrame(() => {
              targetWrapper.style.height = contentHeight + 'px';
              targetWrapper.classList.add('is-expanded');
              targetWrapper.setAttribute('aria-expanded', 'true');
            });
            
            // Set to auto after animation completes
            setTimeout(() => {
              if (targetWrapper.classList.contains('is-expanded')) {
                targetWrapper.style.height = 'auto';
              }
            }, 250);
          }
        } else {
          // Close the accordion
          const content = targetWrapper.querySelector('.accordion__text');
          if (content) {
            // Set explicit height before closing
            targetWrapper.style.height = content.offsetHeight + 'px';
            
            // Force reflow then animate to 0
            requestAnimationFrame(() => {
              targetWrapper.style.height = '0px';
            });
          }
          
          targetSummary.classList.remove('is-expanded');
          targetSummary.setAttribute('aria-expanded', 'false');
          targetWrapper.classList.remove('is-expanded');
          targetWrapper.setAttribute('aria-expanded', 'false');
          
          // Close details after animation
          setTimeout(() => {
            if (!targetWrapper.classList.contains('is-expanded')) {
              targetDetail.open = false;
            }
          }, 250);
        }
      }
      
      // Click handler for accordion toggle
      summary.addEventListener('click', function(e) {
        e.preventDefault();
        
        const isCurrentlyOpen = detail.hasAttribute('open') || detail.open;
        
        // Close all other accordions in single-open mode
        details.forEach(function(otherDetail) {
          if (otherDetail !== detail && otherDetail.open) {
            toggleAccordion(otherDetail, false);
          }
        });
        
        // Toggle current accordion
        toggleAccordion(detail, !isCurrentlyOpen);
      });
      
      // Keyboard support
      summary.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          summary.click();
        }
      });
      
      // All items start collapsed by default - no initialization needed
    });
  });
});
</script>

