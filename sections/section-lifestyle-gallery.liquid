{% style %}
  .lifestyle-gallery-{{ section.id }} {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 60px;
  }

  @media screen and (max-width: 1023px) {
    .lifestyle-gallery-{{ section.id }} {
      padding: 0 20px;
    }
  }

  .lifestyle-carousel-container-{{ section.id }} {
    position: relative;
    overflow: hidden;
  }

  .lifestyle-carousel-{{ section.id }} {
    display: flex;
    transition: transform 0.3s ease;
    overflow: visible;
  }

  .lifestyle-carousel-cell-{{ section.id }} {
    flex: 0 0 auto;
    margin-right: 20px;
    aspect-ratio: 5 / 4;
    position: relative;
  }

  .lifestyle-carousel-cell-{{ section.id }}:last-child {
    margin-right: 0;
  }

  .lifestyle-carousel-cell-{{ section.id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    border-radius: {{ section.settings.image_border_radius }}px;
    display: block;
  }

  .lifestyle-carousel-placeholder-{{ section.id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ section.settings.image_border_radius }}px;
    position: relative;
  }

  .lifestyle-carousel-placeholder-{{ section.id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.3;
  }

  .lifestyle-carousel-empty-state-{{ section.id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .lifestyle-carousel-nav-{{ section.id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: {{ section.settings.nav_button_color }};
    border: none;
    border-radius: 50%;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 2;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .lifestyle-carousel-nav-{{ section.id }}:hover {
    background: {{ section.settings.nav_button_hover_color }};
    transform: translateY(-50%) scale(1.05);
  }

  .lifestyle-carousel-nav-{{ section.id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
    transform: translateY(-50%) scale(1);
  }

  .lifestyle-carousel-nav-{{ section.id }}:focus {
    outline: 2px solid {{ settings.color_accent }};
    outline-offset: 2px;
  }

  .lifestyle-carousel-nav-{{ section.id }} svg {
    width: 20px;
    height: 20px;
    color: {{ section.settings.nav_button_icon_color }};
  }

  .lifestyle-carousel-nav-prev-{{ section.id }} {
    left: -24px;
  }

  .lifestyle-carousel-nav-next-{{ section.id }} {
    right: -24px;
  }

  @media screen and (min-width: 1024px) {
    .lifestyle-carousel-cell-{{ section.id }} {
      width: calc(((1440px - 120px) - 40px) / 3);
    }
  }

  @media screen and (min-width: 768px) and (max-width: 1023px) {
    .lifestyle-carousel-cell-{{ section.id }} {
      width: calc((((100vw - 40px) * 0.9) - 20px) / 2);
    }
  }

  @media screen and (max-width: 767px) {
    .lifestyle-carousel-cell-{{ section.id }} {
      width: calc((100vw - 40px) - 20px);
    }
    
    .lifestyle-carousel-nav-prev-{{ section.id }} {
      left: -16px;
    }

    .lifestyle-carousel-nav-next-{{ section.id }} {
      right: -16px;
    }
  }

  .lifestyle-carousel-heading-{{ section.id }} {
    margin-bottom: 30px;
    color: {{ settings.color_headings }};
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-weight: {{ settings.type_header_font.weight }};
    font-size: calc({{ settings.type_header_scale }}% * 2rem / 100);
    letter-spacing: {{ settings.type_header_letterspace }}px;
    {% if settings.type_header_capitalize %}text-transform: uppercase;{% endif %}
  }

  {% if settings.type_header_border %}
    .lifestyle-carousel-heading-{{ section.id }}::after {
      content: '';
      display: block;
      width: 60px;
      height: {{ settings.type_header_border_size }}px;
      background-color: {{ settings.color_header_border }};
      margin-top: 10px;
    }
  {% endif %}

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}

<section class="section section--{{ section.id }} {% if section.settings.section_width == 'full' %}section--full section--full-mobile{% endif %}{% if section.settings.section_padding_top %}section--pt-{{ section.settings.section_padding_top }}{% endif %}{% if section.settings.section_padding_bottom %}section--pb-{{ section.settings.section_padding_bottom }}{% endif %}" data-section-id="{{ section.id }}" data-section-type="lifestyle-gallery">
  <div class="lifestyle-gallery-{{ section.id }}">
    {% if section.settings.heading != blank %}
      <h2 class="lifestyle-carousel-heading-{{ section.id }}">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="lifestyle-carousel-container-{{ section.id }}" 
         data-section-id="{{ section.id }}"
         role="group" 
         aria-label="Lifestyle gallery carousel">
      <div class="lifestyle-carousel-{{ section.id }}" data-carousel>
        {% assign has_images = false %}
        {% for i in (1..8) %}
          {% liquid
            assign image_key = 'image_' | append: i
            assign image = section.settings[image_key]
          %}
          
          {% if image != blank %}
            {% assign has_images = true %}
            <div class="lifestyle-carousel-cell-{{ section.id }}">
              {%- assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
              <img
                src="{{ image | img_url: '600x' }}"
                srcset="{{ image | img_url: '400x' }} 400w,
                        {{ image | img_url: '600x' }} 600w,
                        {{ image | img_url: '800x' }} 800w,
                        {{ image | img_url: '1200x' }} 1200w"
                sizes="(min-width: 1024px) 420px,
                       (min-width: 768px) 320px,
                       280px"
                alt="{% if image.alt != blank %}{{ image.alt | escape }}{% else %}Lifestyle image {{ i }}{% endif %}"
                {% if i == 1 and section.settings.above_fold %}loading="eager" fetchpriority="high"{% else %}loading="lazy"{% endif %}
                width="600"
                height="480"
              >
            </div>
          {% endif %}
        {% endfor %}

        {% unless has_images %}
          <div class="lifestyle-carousel-cell-{{ section.id }}">
            <div class="lifestyle-carousel-placeholder-{{ section.id }}">
              {{ 'image' | placeholder_svg_tag }}
              <div class="lifestyle-carousel-empty-state-{{ section.id }}">
                Add lifestyle images
              </div>
            </div>
          </div>
        {% endunless %}
      </div>

      {% if has_images %}
        <button
          class="lifestyle-carousel-nav-{{ section.id }} lifestyle-carousel-nav-prev-{{ section.id }}"
          type="button"
          aria-label="Previous image"
          data-nav="prev"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15,18 9,12 15,6"></polyline>
          </svg>
        </button>

        <button
          class="lifestyle-carousel-nav-{{ section.id }} lifestyle-carousel-nav-next-{{ section.id }}"
          type="button"
          aria-label="Next image"
          data-nav="next"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9,18 15,12 9,6"></polyline>
          </svg>
        </button>
      {% endif %}
    </div>
  </div>
</section>

<script>
(function() {
  'use strict';
  
  function LifestyleCarousel(container) {
    this.container = container;
    this.carousel = container.querySelector('[data-carousel]');
    this.cells = this.carousel.querySelectorAll('.lifestyle-carousel-cell-{{ section.id }}');
    this.prevBtn = container.querySelector('[data-nav="prev"]');
    this.nextBtn = container.querySelector('[data-nav="next"]');
    
    this.currentIndex = 0;
    this.cellWidth = 0;
    this.visibleCells = 1;
    this.totalCells = this.cells.length;
    this.maxIndex = 0;
    
    if (this.totalCells <= 1) {
      this.hideNavigation();
      return;
    }
    
    this.init();
  }
  
  LifestyleCarousel.prototype.init = function() {
    this.calculateDimensions();
    this.bindEvents();
    this.updateNavigation();
    
    // Handle resize
    var self = this;
    var resizeTimeout;
    window.addEventListener('resize', function() {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(function() {
        self.calculateDimensions();
        self.updatePosition(false);
        self.updateNavigation();
      }, 200);
    });
  };
  
  LifestyleCarousel.prototype.calculateDimensions = function() {
    var containerWidth = this.container.offsetWidth;
    var windowWidth = window.innerWidth;
    
    if (windowWidth >= 1024) {
      this.visibleCells = 3;
      this.cellWidth = Math.floor(((1440 - 120) - 40) / 3);
    } else if (windowWidth >= 768) {
      this.visibleCells = 2;
      this.cellWidth = Math.floor((((containerWidth - 40) * 0.9) - 20) / 2);
    } else {
      this.visibleCells = 1;
      this.cellWidth = Math.floor((containerWidth - 40) - 20);
    }
    
    this.maxIndex = Math.max(0, this.totalCells - this.visibleCells);
    
    // Set cell widths
    for (var i = 0; i < this.cells.length; i++) {
      this.cells[i].style.width = this.cellWidth + 'px';
    }
  };
  
  LifestyleCarousel.prototype.bindEvents = function() {
    var self = this;
    
    if (this.prevBtn) {
      this.prevBtn.addEventListener('click', function() {
        self.prev();
      });
    }
    
    if (this.nextBtn) {
      this.nextBtn.addEventListener('click', function() {
        self.next();
      });
    }
    
    // Touch/swipe support
    var startX = 0;
    var currentX = 0;
    var isDragging = false;
    
    this.carousel.addEventListener('touchstart', function(e) {
      startX = e.touches[0].clientX;
      isDragging = true;
    });
    
    this.carousel.addEventListener('touchmove', function(e) {
      if (!isDragging) return;
      currentX = e.touches[0].clientX;
    });
    
    this.carousel.addEventListener('touchend', function(e) {
      if (!isDragging) return;
      isDragging = false;
      
      var diff = startX - currentX;
      if (Math.abs(diff) > 50) {
        if (diff > 0) {
          self.next();
        } else {
          self.prev();
        }
      }
    });
  };
  
  LifestyleCarousel.prototype.prev = function() {
    if (this.currentIndex > 0) {
      this.currentIndex--;
      this.updatePosition();
      this.updateNavigation();
    }
  };
  
  LifestyleCarousel.prototype.next = function() {
    if (this.currentIndex < this.maxIndex) {
      this.currentIndex++;
      this.updatePosition();
      this.updateNavigation();
    }
  };
  
  LifestyleCarousel.prototype.updatePosition = function(animate) {
    animate = animate !== false;
    var offset = -(this.currentIndex * (this.cellWidth + 20));
    
    this.carousel.style.transform = 'translateX(' + offset + 'px)';
    
    if (!animate) {
      this.carousel.style.transition = 'none';
      // Force reflow
      this.carousel.offsetHeight;
      this.carousel.style.transition = '';
    }
  };
  
  LifestyleCarousel.prototype.updateNavigation = function() {
    if (this.prevBtn) {
      this.prevBtn.disabled = this.currentIndex === 0;
    }
    
    if (this.nextBtn) {
      this.nextBtn.disabled = this.currentIndex >= this.maxIndex;
    }
  };
  
  LifestyleCarousel.prototype.hideNavigation = function() {
    if (this.prevBtn) this.prevBtn.style.display = 'none';
    if (this.nextBtn) this.nextBtn.style.display = 'none';
  };
  
  // Initialize carousel
  var container = document.querySelector('[data-section-id="{{ section.id }}"]');
  if (container) {
    new LifestyleCarousel(container);
  }
})();
</script>

