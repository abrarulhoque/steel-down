{%- liquid
  assign recommended_products = block.settings.recommended_products
  assign heading = block.settings.heading | default: 'Buy it With'
  assign add_to_cart_text = block.settings.add_to_cart_text | default: 'ADD TO CART'
  assign show_price = block.settings.show_price | default: true
  assign show_navigation_dots = block.settings.show_navigation_dots | default: true
  assign unique_id = block.id | append: '-buy-it-with'
-%}

{%- comment -%}
  NOTE:
  `product_list` settings (used by `recommended_products`) return an array of
  Product objects, not handles. Previously this snippet treated the values as
  handles and tried to resolve them via `all_products[handle]`, which always
  failed and resulted in nothing rendering. We now iterate the Product objects
  directly.
{%- endcomment -%}

{%- if recommended_products.size > 0 -%}
  <div class="buy-it-with" data-buy-it-with="{{ unique_id }}">
    {%- if heading != blank -%}
      <h3 class="buy-it-with__heading">{{ heading | escape }}</h3>
    {%- endif -%}
    
    {%- comment -%} Debug info - remove in production {%- endcomment -%}
    {%- if recommended_products.size == 0 -%}
      <p style="color: red; font-size: 12px;">No products selected</p>
    {%- endif -%}
    
    <div class="buy-it-with__carousel" data-carousel>
      <div class="buy-it-with__slides" data-slides>
        {%- for recommended_product in recommended_products -%}
          {%- if recommended_product -%}
            <div class="buy-it-with__slide{% if forloop.first %} is-active{% endif %}" data-slide="{{ forloop.index0 }}">
              <div class="buy-it-with__product">
                {%- if recommended_product.featured_image -%}
                  <div class="buy-it-with__image">
                    <img 
                      src="{{ recommended_product.featured_image | image_url: width: 200 }}"
                      alt="{{ recommended_product.featured_image.alt | escape }}"
                      width="200"
                      height="{{ 200 | divided_by: recommended_product.featured_image.aspect_ratio | round }}"
                      loading="lazy"
                    >
                  </div>
                {%- endif -%}
                
                <div class="buy-it-with__content">
                  <h4 class="buy-it-with__product-title">{{ recommended_product.title | escape }}</h4>
                  
                  {%- if show_price -%}
                    <div class="buy-it-with__price">
                      {%- if recommended_product.compare_at_price > recommended_product.price -%}
                        <span class="buy-it-with__price--compare">{{ recommended_product.compare_at_price | money }}</span>
                      {%- endif -%}
                      <span class="buy-it-with__price--current">{{ recommended_product.price | money }}</span>
                    </div>
                  {%- endif -%}
                  
                  <form class="buy-it-with__form" action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="{{ recommended_product.selected_or_first_available_variant.id }}">
                    <button 
                      type="submit" 
                      class="buy-it-with__add-to-cart btn btn--primary"
                      {% unless recommended_product.available %}disabled{% endunless %}
                    >
                      {{ add_to_cart_text | escape }}
                    </button>
                  </form>
                </div>
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
      
      {%- if show_navigation_dots and recommended_products.size > 1 -%}
        <div class="buy-it-with__navigation">
          {%- for recommended_product in recommended_products -%}
            {%- if recommended_product -%}
              <button 
                class="buy-it-with__dot{% if forloop.first %} is-active{% endif %}" 
                data-dot="{{ forloop.index0 }}"
                aria-label="Go to slide {{ forloop.index }}"
              ></button>
            {%- endif -%}
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </div>

  <style>
    .buy-it-with {
      margin: 1.5rem 0;
    }
    
    .buy-it-with__heading {
      margin-bottom: 1rem;
      font-size: 1.25rem;
      font-weight: 600;
    }
    
    .buy-it-with__carousel {
      position: relative;
    }
    
    .buy-it-with__slides {
      overflow: hidden;
      border-radius: 12px;
      background-color: #f8f8f8;
    }
    
    .buy-it-with__slide {
      display: none;
      padding: 1.5rem;
    }
    
    .buy-it-with__slide.is-active {
      display: block;
    }
    
    .buy-it-with__product {
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    
    .buy-it-with__image {
      flex-shrink: 0;
      width: 80px;
      height: 80px;
      border-radius: 8px;
      overflow: hidden;
      background-color: #fff;
    }
    
    .buy-it-with__image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
    .buy-it-with__content {
      flex: 1;
      min-width: 0;
    }
    
    .buy-it-with__product-title {
      font-size: 1rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      line-height: 1.3;
    }
    
    .buy-it-with__price {
      margin-bottom: 0.75rem;
    }
    
    .buy-it-with__price--compare {
      text-decoration: line-through;
      color: #666;
      margin-right: 0.5rem;
    }
    
    .buy-it-with__price--current {
      font-weight: 600;
      font-size: 1.1rem;
    }
    
    .buy-it-with__add-to-cart {
      background-color: #4a9b8f;
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 6px;
      font-weight: 600;
      cursor: pointer;
      transition: background-color 0.2s;
    }
    
    .buy-it-with__add-to-cart:hover {
      background-color: #3d8276;
    }
    
    .buy-it-with__add-to-cart:disabled {
      background-color: #ccc;
      cursor: not-allowed;
    }
    
    .buy-it-with__navigation {
      display: flex;
      justify-content: center;
      gap: 0.5rem;
      margin-top: 1rem;
    }
    
    .buy-it-with__dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      border: none;
      background-color: #ddd;
      cursor: pointer;
      transition: background-color 0.2s;
    }
    
    .buy-it-with__dot.is-active {
      background-color: #4a9b8f;
    }
    
    @media screen and (max-width: 767px) {
      .buy-it-with__product {
        flex-direction: column;
        text-align: center;
        gap: 1rem;
      }
      
      .buy-it-with__image {
        width: 120px;
        height: 120px;
        margin: 0 auto;
      }
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const carousel = document.querySelector('[data-buy-it-with="{{ unique_id }}"]');
      if (!carousel) return;
      
      const slides = carousel.querySelectorAll('[data-slide]');
      const dots = carousel.querySelectorAll('[data-dot]');
      let currentSlide = 0;
      
      function showSlide(index) {
        slides.forEach((slide, i) => {
          slide.classList.toggle('is-active', i === index);
        });
        dots.forEach((dot, i) => {
          dot.classList.toggle('is-active', i === index);
        });
        currentSlide = index;
      }
      
      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          showSlide(index);
        });
      });
      
      // Auto-advance slides every 5 seconds
      if (slides.length > 1) {
        setInterval(() => {
          const nextSlide = (currentSlide + 1) % slides.length;
          showSlide(nextSlide);
        }, 5000);
      }
    });
  </script>
{%- else -%}
  {%- if heading != blank -%}
    <div class="buy-it-with">
      <h3 class="buy-it-with__heading">{{ heading | escape }}</h3>
      <p style="color: #666; font-style: italic;">Please select products to display in the theme editor.</p>
    </div>
  {%- endif -%}
{%- endif -%}
